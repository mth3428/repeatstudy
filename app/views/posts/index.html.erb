<div id="search-wrap">
  <form role="search" method="get" action="">
    <input type="text" value="" name="" id="search-text">
  </form>
</div>

<%# 画像を設定した人はその画像を表示させ設定してない人はデフォルトの画像を表示させる %>
      <!-- 記事エリア -->

<% @posts.each do |post| %>
  <div class="twitter__block">
      <%# 画像を表示させるコード %>
      <div class="user_image">
        <% if post.user.image.present? %>
          <%= link_to user_path(post.user) do %>
            <%= image_tag post.user.image, size: "50x50",class: "rounded-circle" %>
          <% end %>
        <% else %>
          <%= link_to user_path(post.user) do %>
            <%= image_tag ("default.png"), size: "50x50",class: "rounded-circle" %>
          <% end %>
        <% end %>
      </div>
      <%# 画像を表示させるコード %>
      <%# 投稿内容の表示 %>
        <div class="twitter__block-text">
        <%= link_to post_path(post.id) do %>
          <div class="name"><%= post.user.nickname %></div>
            <div class="date"><%= l post.user.created_at %></div>
          <div class="text">
            <div class="in-pict">
              <%= image_tag post.image, size: "200x200" if post.image.attached? %>
            </div>
            <%# 改行を反映させる記述 %>
            <%= safe_join(post.tweet.split("\n"),tag(:br)) %>
            <%# 改行を反映させる記述 %>
            <%= @tags %>
          </div>
        <% end %>
        </div>
      <%# 投稿内容の表示 %>
  </div>
<% end %>