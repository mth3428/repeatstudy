<% if user_signed_in? %>
  <% if post.favorited_by?(current_user) %>
    <%= link_to(post_add_path(post), method: :delete, remote: true, id: :"favorite-button-#{post.id}") do %>
      ♥<%= post.favorites.count %>いいね
    <% end %>
  <% else %>
    <%= link_to(post_add_path(post), method: :post, remote: true, id: :"favorite-button-#{post.id}") do %>
      ♡<%= post.favorites.count %>いいね
    <% end %>
  <% end %>
<%else%>
  <%= link_to new_user_session_path, remote: false do %>
    いいね<%= post.favorites.count %>
  <% end %>
<% end %>